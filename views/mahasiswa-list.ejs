<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styleNavbar.css">
    <title>Krs Mahasiswa</title>
    <script>
        function printContent(el){
            var restorepage = document.body.innerHTML;
            var printcontent = document.getElementById(el).innerHTML;
            document.body.innerHTML = printcontent;
            window.print();
            document.body.innerHTML = restorepage;
        }
    </script>
</head>
<body>
    <%- include('_partialNavbar') %>
    <center>
        <h1>Daftar Mahasiswa</h1>

        <button onclick="printContent('div1')">Cetak</button>

        <button><a href="/mahasiswa/addMahasiswa">Tambah mahasiswa</a></button>
        <br><br>
        <div id="div1">

         <table border=1 >
             <tr>
             
             <th>Nama</th>
             <th>Nim</th>
             <th>Alamat</th>
             <th>Jurusan</th>
             <th>Opsi</th>
             
             </tr>
     
             <% for(let i=0; i<mahasiswa.length; i++){ %>
                 <tr>  
                   
                     <td><%= mahasiswa[i].nama %></td>
                     <td><%= mahasiswa[i].nim %></td>
                     <td><%= mahasiswa[i].alamatUpper %></td>
                     <td><%= mahasiswa[i].jurusanCode %></td>
                    <td><a href="/mahasiswa/editMahasiswa/<%=mahasiswa[i].id%>">Edit</a> | <a href="/mahasiswa/deleteMahasiswa/<%=mahasiswa[i].id%>">Delete</a> |
                        <a href="/mahasiswa/<%=mahasiswa[i].id%>/matakuliah">Mata Kuliah</a></td>
                 </tr>
            <% } %>
             
         </table>
        </div>
    </center>
</body>
</html>